<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="@dimen/home_title_image_size"
        android:layout_height="@dimen/home_title_image_size"
        android:src="@drawable/ic_huge"
        android:id="@+id/imageView"
        android:layout_above="@+id/home_title"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/home_title"
        android:text="@string/app_name"
        android:textSize="@dimen/home_title_text_size"
        android:textStyle="bold"
        android:textColor="@color/home_title_text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/powered_by"
        android:text="@string/powered_by"
        android:textColor="@color/home_title_text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        />
</LinearLayout>
